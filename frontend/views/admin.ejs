<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Document Upload and Management</title>
    <link rel="stylesheet" type="text/css" href="/admin.css" />
  </head>
  <body>
    <header>
      <!-- To render success or error message -->
      <% if (message.length > 0) { %>
      <div class="flash-message"><%= message %></div>
      <% } %>
      <div class="container">
        <div id="branding">
          <h1><span class="highlight">Edutech</span> Resource Centre</h1>
        </div>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">About</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <div class="container">
      <h1>Admin Document Upload</h1>
      <form
        action="/user/upload"
        method="post"
        id="uploadForm"
        class="upload-form"
        enctype="multipart/form-data"
      >
        <input type="file" id="fileInput" name="document" required />
        <button type="submit">Upload</button>
      </form>

      <h2>Uploaded Documents</h2>
      <div class="document-list-container">
        <% if (documents.length === 0) { %>
        <p class="no-documents">No documents available.</p>
        <% } else { %>
        <ul id="documentList" class="document-list">
          <% documents.forEach(document => { %>
          <li class="document-item">
            <span><%= document.name %></span>
            <span class="document-date">
              &nbsp; - <%= document.createdAt.toLocaleString('en-US', { year:
              'numeric', month: 'short', day: 'numeric', hour: 'numeric',
              minute: 'numeric', hour12: true }) %>
            </span>
            <a href="/user/download/<%= document._id %>">
              <button>Download</button>
            </a>
            <a class="delete-button" href="/user/delete/<%= document._id %>">
              <button>Delete</button>
            </a>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </div>

      <h2>Comments</h2>
      <form
        action="/user/admin/add-comment"
        method="post"
        id="commentForm"
        class="comment-form"
      >
        <textarea
          name="content"
          placeholder="Add a comment..."
          required
        ></textarea>
        <input type="hidden" name="author" value="Admin" />
        <button type="submit">Post Comment</button>
      </form>

      <div class="comments-container">
        <% if (comments.length === 0) { %>
        <p class="no-comments">No comments yet.</p>
        <% } else { %>
        <ul id="commentsList" class="comments-list">
          <% comments.forEach(comment => { %>
          <li class="comment-item">
            <p>
              <strong><%= comment.author %>:</strong> <%= comment.content %>
            </p>
            <p class="comment-date">
              <%= comment.createdAt.toLocaleDateString() %>
            </p>
            <form
              action="/user/admin/delete-comment/<%= comment._id %>"
              method="POST"
            >
              <button type="submit">Delete</button>
            </form>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </div>

      <p>Click <a href="/">here</a> to go home</p>
    </div>
    <script src="/flashMessage.js"></script>
  </body>
</html>
